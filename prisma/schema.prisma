generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String 
  phoneNo   String
}

model Match {
  id        String   @id @default(uuid())
  date      String
  organizerName      String
  phoneNo   String
}

model Ground {
  id                  String    @id @default(uuid())
  dateOfRegistration  DateTime
  groundName          String
  phoneNo             String[]
  imageUrl            String[]
  addressLine         String
  pinCode             String
  city                String
  state               String

}

model Address {
  id            String   @id @default(uuid())
  addressLine   String
  pinCode       String
  city          String
  state         String
}